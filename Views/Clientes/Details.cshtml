@model SistemaDeEncomendas.Models.Clientes

@{
    ViewData["Title"] = "Detalhes";
}

<div class="row align-items-center">
    <div class="col-auto d-flex align-items-center">
        <h1 class="navbar-brand text-dark d-flex align-items-center align-self-stretch"><i class="fa-solid fa-address-card fa-2x"></i>&nbsp;Detalhes do(a) cliente</h1>
    </div>    
</div>

<div>    
    <hr />
    <dl class="row">        
        <dt class="col-sm-2 text-secondary">
            Código
        </dt>
        <dd class="col-sm-10 text-secondary">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        @if(string.IsNullOrEmpty(Model.Endereco))
            {
                <dd class="col-sm-10 text-danger">Não Preenchido</dd>
            } else
            {
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Endereco)
                </dd>
            }

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        @if(string.IsNullOrEmpty(Model.Email))
            {
                <dd class="col-sm-10 text-danger">Não Preenchido</dd>
            } else
            {
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            }

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tel)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelAdc)
        </dt>
        @if(string.IsNullOrEmpty(Model.TelAdc))
            {
                <dd class="col-sm-10 text-danger">Não Preenchido</dd>
            } else
            {
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.TelAdc)
                </dd>
            }
    </dl>
</div>

<div class="form-group">                
                <a asp-action="Index"><input type="button" value="Voltar" class="btn btn-secondary" /></a>
    <a asp-action="Edit" asp-route-id="@Model?.Id"><input type="submit" value="Editar" class="btn btn-primary" /></a>&nbsp;
    <a asp-action="Delete" asp-route-id="@Model?.Id"><input type="submit" value="Excluir" class="btn btn-danger" /></a>
            </div>
