@model SistemaDeEncomendas.Models.Encomendas

@{
    ViewData["Title"] = "Detalhes";
}

<div class="row align-items-center">
    <div class="col-auto d-flex align-items-center">
        <h1 class="navbar-brand text-dark d-flex align-items-center align-self-stretch"><i class="fa-solid fa-handshake fa-2x"></i>&nbsp;Detalhes da encomenda</h1>
    </div>
</div>

<div>    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-secondary">
            Código
        </dt>
        <dd class = "col-sm-10 text-secondary">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormaPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormaPagamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Clientes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clientes.Nome)
        </dd>
    </dl>
</div>

<div class="form-group">
                <a asp-action="Index"><input type="button" value="Voltar" class="btn btn-secondary" /></a>&nbsp;
    <a asp-action="Edit" asp-route-id="@Model?.Id"><input type="submit" value="Editar" class="btn btn-primary" /></a>&nbsp;
    <a asp-action="Delete" asp-route-id="@Model?.Id"><input type="submit" value="Excluir" class="btn btn-danger" /></a>
            </div>
