@model SistemaDeEncomendas.Models.Encomendas

@{
    ViewData["Title"] = "Excluir encomenda";
}

<div class="row align-items-center">
    <div class="col-auto d-flex align-items-center">
        <h1 class="navbar-brand text-danger d-flex align-items-center align-self-stretch"><i class="fa-solid fa-handshake fa-2x"></i>&nbsp;Excluir Encomenda</h1>
    </div>    
</div>

<h3 class="text-danger">Tem certeza que deseja excluir a encomenda de código @Model.Id ?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-secondary">
            Código
        </dt>
        <dd class = "col-sm-10 text-secondary">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FormaPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FormaPagamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Clientes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clientes.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />&nbsp;
        <a asp-action="Index"><input type="button" value="Não Excluir" class="btn btn-primary" /></a>
    </form>
</div>
