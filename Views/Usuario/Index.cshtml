@model SistemaDeEncomendas.Models.Usuario
@{
    ViewData["Title"] = "Acesso não autorizado";
}
@*
<h2>Autenticação</h2>
<br />
<a href="~/Usuario/LoginPage" class="btn btn-secondary">Login</a>*@

    @using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-md-6">
            
            <div class="form-floating mb-3 form-group">
                <input class="form-control" asp-for="Login" type="text" name="Login" placeholder="Informe o Login" />
                <label for="Login">Usuário</label>
               <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 form-group">
                    <input class="form-control" asp-for="Senha" type="password" name="Senha" placeholder="Informe sua senha" />
                    <label for="Senha">Senha</label>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                    
    @if (ViewBag.Erro != null)
    {
        <h3>
            @ViewBag.Erro
        </h3>
    }            
            </div>
        <button class="btn btn-primary" type="submit">Logon</button>
    
    </div>
    </div>
}
